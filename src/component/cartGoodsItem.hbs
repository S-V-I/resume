<div class="row">
              
	<div class="col-2">
		<img src="{{image}}" alt="{{name}}">
	</div>
	
	<div class="col-4 ps-5">
		<h4 class="card-title">{{name}}</h4>
		<p>{{description}}</p>
	</div>

	<div class="col-2">
		{{#with price}}
			{{title}}
			<br>
			{{value}}
		{{/with}}
	</div>

	<div class="col-2 mb-3">
		{{amount}}
	</div>

	<div class="col-2">
		{{#each buttons}}
			<button class="
			{{#if isPrimary}}
			btn btn-primary
			{{/if}}
			{{#if isDanger}}
			btn btn-outline-danger
			{{/if}}
			">
				{{text}}
			</button>
			<br>
			<br>
		{{/each}}
	</div>

</div>