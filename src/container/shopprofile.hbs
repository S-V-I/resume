<main>

	<hr class="my-1">
	<section class='nav'>
    {{#with navigation}}
      <div class='nav-item'>
        {{#each links}}
          <a
            class='{{#if @last}}disabled{{/if}} btn btn-link'
            href='{{href}}'
          >{{text}}</a>
        {{/each}}
      </div>
    {{/with}}
  </section>
  <hr class="mb-5">

  <section>
		<h1>{{header}}</h1>

		{{#with purchase}}
			<div class="col-12 mb-3">
				<div class="nav nav-tabs">
					{{#each tabs}}
						<a class="nav-link " href="#">{{this}}</a>
					{{/each}}
				</div>
			</div>

			<div>
				<div>
					{{#with actionBlock}}
						
							{{#with input}}
								
									<input class="form-control col-4" placeholder="placeholder">
								
							{{/with}}
						

						
							{{#each buttons}}
								<a class="
								{{#if isSuccess}}
									btn btn-success
								{{/if}}
								{{#if isOutline}}
									btn btn-outline-success
								{{/if}}
								{{#if isDanger}}
									btn btn-outline-danger
								{{/if}}
								"href="{{link}}">{{text}}</a>
							{{/each}}
						

					{{/with}}
				</div>
			</div>

		{{/with}}


  </section>
</main>




