<main>

	<hr class="my-1">

	 <section class='nav'>
    {{#with navigation}}
      <div class='nav-item'>
				<ul class="list-inline">
					{{#each links}}
						<li class="list-inline-item">
							<a
								class='nav-link {{#if @last}}disabled{{/if}} btn btn-link'
								href='{{href}}'
							>{{text}}</a>
						</li>
					{{/each}}
				</ul>

      </div>
    {{/with}}
  </section>
  <hr class="mb-5">

  <section>
		<h1>{{header}}</h1>

		{{#with purchase}}
			<div class="col-12 mb-3">
				<div class="nav nav-tabs">
					{{#each tabs}}

						<a class="nav-link {{#if @first}}active{{/if}} " href="#">{{this}}</a>

					{{/each}}
				</div>
			</div>


			<div class="row">
				{{#with actionBlock}}
					<div class="col-4">
						{{#with input}}
								<input class="form-control" placeholder="placeholder">
						{{/with}}
					</div>

					<div class="col-8">
						{{#each buttons}}
							<a class="
							{{#if isSuccess}}
								btn btn-success
							{{/if}}
							{{#if isOutline}}
								btn btn-outline-success
							{{/if}}
							{{#if isDanger}}
								btn btn-outline-danger
							{{/if}}
							"href="{{link}}">{{text}}</a>
						{{/each}}
					</div>

				{{/with}}
			</div>
			<hr class="mb-5">

			{{> purchaseItem }}

		{{/with}}
  </section>
	<hr class="my-5">

	<section>
		{{#with userInfo}}
      <h2 class="mb-5">{{title}}</h2>

      <div class="card">
        <div class="card-body">
          {{#with profileData}}
            <h4>{{title}}</h4>

            <div class="card my-3">
              <div class="card-body">
                
                {{#with fullName}}
                  <div class="row">
                    <div class="col-4">
                      {{#with surname}}
                        {{title}}
                        <br>
                        {{value}}
                      {{/with}}
                    </div>

                    <div class="col-4">
                      {{#with name}}
                        {{title}}
                        <br>
                        {{value}}
                      {{/with}}
                    </div>

                    <div class="col-4">
                      {{#with middleName}}
                        {{title}}
                        <br>
                        {{value}}
                      {{/with}}
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>

            <div class="card my-3">
              <div class="card-body">
                {{#with otherInfo}}
                  <div class="row">
                    <div class="col-4">
                      {{#with birthday}}
                        {{title}}
                        <br>
                        {{value}}
                      {{/with}}
                    </div>

                    <div class="col-4">
                      {{#with sex}}
                        {{title}}
                        <br>
                        {{value}}
                      {{/with}}
                    </div>

                    <div class="col-4">
                      {{#with language}}
                        {{title}}
                        <br>
                        {{value}}
                      {{/with}}
                    </div>
                  </div>
                {{/with}}
              </div>
            </div>

          {{/with}}

          <div class="card">
            <div class="card-body">
              <div class="row">
                {{#each buttons}}
                  
                    <div class="col-4">
                      <a class="btn 
                      {{#if isPrimary}}btn-primary{{/if}}
                      {{#if isSecondary}}btn-outline-secondary{{/if}}
                      {{#if isDanger}}btn-outline-danger{{/if}}
                      " href="{{link}}">{{text}}</a>
                    </div>
                  
                {{/each}}
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="card my-3">
        <div class="card-body">
          {{#with recipients}}
            <h4>{{title}}</h4>
 
            <div class="row">
              {{#each users}}
                <div class="col-4">
                  <div class="card">
                    <div class="card-body">
                      
                      {{name}}
                      <br>
                      {{phone}}
                      <br>
                      {{#with button}}
                        <a class="btn btn-primary mt-3" href="{{link}}">{{text}}</a>
                      {{/with}}
                      
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>

          {{/with}}
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          {{#with contacts}}
            <h4>{{title}}</h4>
 
            <div class="row">
              {{#each contactData}}
                <div class="col-4">
                  <div class="card">
                    <div class="card-body">
                      
                      {{title}}
                      <br>
                      {{value}}
                      <br>
                      {{#with button}}
                        <a class="btn 
                        {{#if isPrimary}}btn-primary{{/if}}
                        {{#if isSecondary}}btn-outline-secondary{{/if}}
                        {{#if isDanger}}btn-outline-danger{{/if}}
                        mt-3 text-sm" href="{{link}}">{{text}}</a>
                      {{/with}}
                      
                    </div>
                  </div>
                </div>
              {{/each}}
            </div>

          {{/with}}
        </div>
      </div>

    {{/with}}
	</section>
  <hr class="my-5">

  <section class="col-12">
    <div class="row">
      {{#each footer}}
        <div class="col-2 nav">
          {{#each this}}
            <a class="nav-link btn btn-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
          {{/each}}
        </div>
      {{/each}}
    </div>
  </section>


</main