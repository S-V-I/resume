<main>
  <section class='nav'>
    {{#with navigation}}
      <div class='nav-item'>
				<ul class="list-inline">
					{{#each links}}
						<li class="list-inline-item">
							<a
								class='nav-link {{#if @last}}disabled{{/if}} btn btn-link'
								href='{{href}}'
							>{{text}}</a>
						</li>
					{{/each}}
				</ul>
      </div>
    {{/with}}
  </section>

	<section class="mt-3">
		<div class="breadcrumb">
			{{#each breadcrumb}}
				<a class="breadcrumb-item nav-link text-primary {{#if @last}}disabled text-muted{{/if}}" href="{{url}}">{{name}}</a>
			{{/each}}
		</div>
	</section>

	<section>
		<div class="col-12">
			<h1 class="mb-5">{{header}}</h1>

			<div class="row">
				{{#each sortBlock}}
					<div class="col-3">
						<select class="form-select">
							<option selected>{{placeholder}}</option>
							{{#each options}}
								<option value="{{value}}">{{text}}</option>
							{{/each}}
						</select>
					</div>
				{{/each}}
			</div>

		</div>
	</section>

	<section>
		<div class="col-12">
			<div class="row">
				<div class="col-4">
					
					{{#with filterBlock}}
						<div class="card">
							<div class="card-body">
								
								{{#with sellers}}
									<div class="form-label mb-3">{{title}}</div>

									<div class="form-check">
										<label class="form-check-label">
											{{#each list}}
												{{value}}

												<input 
												type="checkbox"
												name="sellers"
												class="form-check-input">

												<div class='form-text'></div>

											{{/each}}
										</label>
									</div>	

								{{/with}}
								<hr class="my-3">

								{{#with brands}}
									<label class="form-label mb-3">{{title}}</label>
									<input class="form-control text-muted" placeholder="{{input.placeholder}}">

									<div class="form-check mt-3">
										<label class="form-check-label">
											{{#each options}}
												{{value}}

												<input 
												type="checkbox"
												name="sellers"
												class="form-check-input">

												<div class='form-text'></div>

											{{/each}}
										</label>
									</div>	
								{{/with}}
								<hr class="my-3">
								
								{{#with price}}
									<label class="form-label mb-3">{{title}}</label>
									{{#with range}}
										<input class="form-control text-muted" placeholder="{{from}}">
										<input class="form-control text-muted my-3" placeholder="{{to}}">
									{{/with}}
									{{#with button}}
										<a class="btn btn-outline-dark btn-sm" href="{{link}}">{{text}}</a>
									{{/with}}
								{{/with}}
								<hr class="my-3">

								{{#each filterList}}
									<div class="form-label mb-3">{{title}}</div>

									<div class="form-check">
										<label class="form-check-label">
											{{#each options}}
												{{value}}

												<input 
												type="checkbox"
												name="options"
												class="form-check-input">

												<div class='form-text'></div>

											{{/each}}
										</label>
									</div>
									<hr class="my-3">
								{{/each}}

							</div>
						</div>
					{{/with}}
				</div>

				<div class="col-8">
					<div class="row">
						{{#each goodsList}}
								<div class="col-6">

									{{> catalogItem }}

								</div>
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="card text-center bg-success text-light mt-4">
    <div>
      {{#with service}}
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        {{#each buttons}}
          <a class="btn btn-primary" href="{{link}}">{{text}}</a>
        {{/each}}
      {{/with}}
    </div>
  </section>
  <hr class="my-5">

  <section class="col-12">
    <div class="row">
      {{#each footer}}
        <div class="col-2 nav">
          {{#each this}}
            <a class="nav-link btn btn-link {{#if @last}}disabled{{/if}}" href="{{link}}">{{text}}</a>
          {{/each}}
        </div>
      {{/each}}
    </div>
  </section>

</main>



